<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li>Apply Exam</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<br/>
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <div class="form-group">
      <div class="row">
        <div class="box col-md-12">
          <div class="box-inner">
            <div class="box-header well">
              <h2>Companies</h2>
            </div>
            <div class="box-content" style="overflow-y: scroll; height:280px">
              <table id="datatable" class="table table-striped table-bordered responsive">
                <thead>
                  <tr>
                    <th>List Of Companies</th>
                    <th>Criteria</th>
                    <th>Apply</th>
                    <th>Result</th>
                  </tr>
                </thead>
                <tbody>
                  <% @placement_exam.each do |p| %>
                    <tr>
                      <td><%= p.company.name%></td>
                      <td><%= p.company.criteria %></td>
                      <td><%=  link_to 'Apply',question_paper_placement_exams_path(id: p.company_id, p_id: p.id) %></td>
                      <td><%=link_to 'Result',qualified_student_placement_exams_path(id:p.company_id,exam_id:p.id)%></td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-12">
      <div class="form-group">
        <div class="row">
          <div class="box col-md-12">
            <div class="box-inner">
              <div class="box-header well">
                <h2>Placement News</h2>
              </div>
              <div class="box-content" style="overflow-y: scroll; height:280px">
              <table id="datatable" class="table table-striped table-bordered responsive">
               <thead>
                  <tr>
                    <th>Title</th>
                    <th>Content</th>
                  </tr>
                </thead>
                <tbody>
                  <% @placement_news.each do |placement_news|%>
                    <tr>
                    <%if placement_news.islink?%>
                        <td><%=link_to placement_news.title,qualified_student_placement_exams_path(exam_id:@placement_exam) %></td>
                     <%else%>
                       <td><%= placement_news.title %></td>
                      <%end%>
                  <td><%= placement_news.content %></td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
