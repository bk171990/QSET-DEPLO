<%if StudentScore.where(placement_exams_id:@placement_exam.id).take%>
<h1><center><%="Exam Score of #{@company.name}"%></h1></center>
    <div class="box-content">
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
         <%= form_for :score ,url:{action:'qualify_student',id:@company,exam_id:@placement_exam} do |f|%>
          <table id="datatable" class="table table-striped table-bordered responsive">
            <tr>
                 <th><%="Student id"%></th>
                 <th><%="Student Name"%></th>
                 <th><%="Score"%></th>
                 <th><%="Qualify"%></th>
              </tr>
            <%@student_score.each do |i|%>
              
              <tr>
                 <td><%=i.student_id %> </td>
                 <td><%= Student.find(i.student_id).full_name%></td>
                 <td><%=i.score%></td>
                  <td><%= check_box_tag "qualify[]",i.student_id,false%></td>
              </tr>
            <%end%>
          </table>
          <%= f.submit :"submit",class: "btn btn-primary"%>
         <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
<%else%>
<h1>Result not yet displayed plz try later...</h1>
<%end%>
