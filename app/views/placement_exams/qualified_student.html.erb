<%if StudentScore.where(placement_exams_id:@placement_exam.id).take%>
<h1><center><%="Short-Listed candidates for  #{@company.name}"%></h1></center>
    <div class="box-content">
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
         
          <table id="datatable" class="table table-striped table-bordered responsive">
            <tr>
                 <th><%="Student id"%></th>
                 <th><%="Student Name"%></th>
                 <th><%="Score"%></th>
                 
              </tr>
            <%@student_score.each do |i|%>
              
              <tr>
                 <td><%=i.student_id %> </td>
                 <td><%= Student.find(i.student_id).full_name%></td>
                 <td><%=i.score%></td>
              </tr>
            <%end%>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%else%>
<h1>Result not yet Displayed plz try later...</h1>
<%end%>
