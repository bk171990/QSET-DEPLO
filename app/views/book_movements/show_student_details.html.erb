<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Library',main_page_books_path %></li>
    <li><%= link_to 'Manage Books',search_book_books_path %></li>
    <li>Student Detail</li>
  </ul>
</div>



<div class="row">
  <div class="col-md-3"></div>
   <div class="pull-center">
     <%=link_to "Add Books", enter_book_details_book_movements_path(@student), remote: true,class: "btn btn-primary-link btn-xs" %>
    </div>
  </div>
</div>

<div id="myModal" class="modal fade"></div>


<div class="box-inner">
    <div class="box-header well" data-original-title="">
    <h2>Book Details</h2>
  </div>

  <div class="box-content" style="overflow-y: auto;height: 230px;width: 100%;">
  <table id="datatable" class="table table-striped table-bordered responsive">
    <tr class="tr-head">
     <thead>
      <tr>     
        <th>Book No</th>
        <th>Issue Date</th>
        <th>Due Date</th>
        <th colspan="3"></th>
      </tr>
     </thead>

    <tbody>
      <% @dibs.each do |l| %>
        <tr>  
          <td><%= l.book.book_number %></td>
          <td><%= l.issue_date %></td>
          <td><%= l.due_date %></td>
          <td><div class="label-success label label-default">
         <i class="glyphicon glyphicon-pencil icon-white"></i> </td>
          <td><div class="label-danger label label-default">
         <i class="glyphicon glyphicon-trash icon-white"></i> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
