
<% unless @students.nil? %>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
          <h2>Student Details</h2>
      </div>
<div class="box-content" style="overflow-y: scroll; height:auto">
<% if @students.empty? %>
  <h4 align="center">No Record Found </h4>
<% else %>
  <table class="datatable table table-striped table-bordered responsive">
    <thead>
     <tr>
      <th>Sr. No.</th>
      <th>Student Name</th>
      <th>Admission No</th>
      <th>Batch And Course</th>
      <th></th>
      </tr>
    </thead>
    <tbody>
      
      <% @students.each_with_index do |student, i| %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= link_to "#{student.first_name+' '+student.last_name}",issued_index_book_movement_path(student)%></td>
          <td><%= student.admission_no %></td>
          <td><%= student.batch.course.course_name.capitalize+" "+student.batch.course.section_name.capitalize+" "+student.batch.name.capitalize%>
        </tr>
      <% end %>   
      <% end %>   
    </tbody>
  </table>
<% end %>


