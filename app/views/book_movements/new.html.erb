<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Library Management',main_page_books_path %></li>
    <li>Issue Books </li>
  </ul>
</div>


<div class="row">
  <div class="col-md-2"></div>
  <div class="box col-md-6">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Books Details</h2>
      </div>
      <div class="box-content">
        <%= form_for @dib do |c|%>
          <div class="errors"><ul class="errors"></ul></div>
          <fieldset>
            
            <%=hidden_field_tag :student_id, @student.id  %>
            <div class="form-group">
              <div class="col-md-3"><b>Issue Date</b></div>
              <%= c.date_field :issue_date,:value => Time.now.strftime('%Y-%m-%d'),class: "form-control",style:"width:250px",readonly:true %>
            </div>

            <div class="form-group">
              <div class="col-md-3"><b>Due Date</b></div>
              <%= c.date_field :due_date,:value => Date.today+@interval,class: "form-control",style:"width:250px",readonly:true %>
            </div>

            <div class="add_book"></div>
            <div class="row">
              <div class="col-sm-4 ">
                <div class="form-group">
                  <%= button_tag "Add Books",{onclick:"var a={type:$i=0};$.get('book',a,function(response){});", :class => "btn btn-small btn-inverse", :type => "button"}%>
                </div>
              </div>
            </div>
            </div>
     
            <div class="center"> 
              <div class="form-actions">               
                <%= c.submit 'Create', class: "btn btn-primary"%>
              </div>
            </div>
            <br>
          </fieldset>
        <%end%>  
      </div>
    </div>
  </div>
</div>
<br><br><br>




