<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Human Resources',employees_path %></li>
    <li>Employee Search</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>

<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to 'View all', viewall_emp_employees_path, class: "btn btn-primary-link btn-xs" %>
      <%= link_to 'Advanced Search',advance_search_employees_path, class: "btn btn-primary-link btn-xs" %>
    </div>
  </div>
</div>
<hr>

<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Employee Search</h2>
    </div>
   <div class="box-content">
 <table class="table table-striped table-bordered responsive">
<%= form_for :advance_search, url:{action:'search_emp'}, method: :get,remote:true,html:{id: "user_form"} do |f|%>

    <tbody>

       <tr>
     	  <td class="col-4" colspan="4">
        <b>Search by Name:</b>
        <%= text_field_tag :search,"",{oninput:"$('#user_form').submit();", class: 'form-control',placeholder:'Search by name', style: 'width:250px'}%></td>
     </tr>

 	 <tr>
         <td class="col-3"><%= f.select :employee_department_id, EmployeeDepartment.all.collect {|b| [b.name,b.id]},{prompt:"Select Department"},{onchange:"$('#user_form').submit();", class: 'form-control'}%></td>
  
         <td class="col-3"><%= f.select :employee_category_id, EmployeeCategory.all.collect {|b| [b.name,b.id]},{prompt:"Select Category"},{onchange:"$('#user_form').submit();", class: 'form-control'}%></td>
    
         <td class="col-3"><%= f.select :employee_position_id,EmployeePosition.all.collect {|b| [b.name,b.id]},{prompt:"Select Position"},{onchange:"$('#user_form').submit();", class: 'form-control'}%></td>
    
         <td class="col-3"><%= f.select :employee_grade_id, EmployeeGrade.all.collect {|b| [b.name,b.id]},{prompt:"Select Grade"},{onchange:"$('#user_form').submit();", class: 'form-control'}%></td>
     </tr>

   
  </div>
  
<%end%>
</tbody>
</table>
</div>
</div>
</div>
</div>
  <div class="user_search"></div>
 