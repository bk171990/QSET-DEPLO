<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
     <li><%= link_to 'Human Resources',employees_path %></li>
     <li><%= link_to 'HR Management',employee_management_employees_path %></li>
     <li><%= link_to 'Employee Profile',profile_employees_path(@employee.id)%></li>
     <li>Employee Details Update</li>
  </ul>
</div>
Note:<font color="red">Fields Marked with * must be filled</font>
<div id="flash"><%= render 'layouts/messages'%></div>


<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Employee Details Update</h2>
       
      </div>
        <div class="box-content">
<%= form_for @employee ,url:{action:'update_edit_address_profile',format:@employee.id} do |f| %>

    <fieldset>
     <% if @employee.errors.any? %>
        <div class="alert alert-danger" style="width:500px" >
          <h3>Error prohibited to from being saved:</h3>
          <ul>
           <% @employee.errors.full_messages.each do |msg| %>
              <li style="width:500px" align="left"><%= msg %></li>
            <% end %>
          </ul>
      
      </div>
          <% end %>
          <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
       <div class="form-group">
    <h4><b><u><font color="brown">Home Address:</font></u></b></h4>
</div>
        <div class="form-group">
        <b>Line-1:</b>
         
          <%=f.text_field :home_address_line1,class: "form-control"%>
         </div>
        <div class="form-group">
            <b>City:</b>
             
            <%=f.text_field :home_city, :required=>false,class: "form-control"%>
        </div>
        <div class="form-group">
         <b>State:</b>
          <%=f.text_field :home_state,class: "form-control"%>
       </div>

       <div class="form-group">
           <b>Country:</b>
           <%=f.select :home_country_id,Country.all.collect{|c| [c.name,c.id]},{prompt:'Country'},{class: "form-control"}%>
       </div>
       <div class="form-group">
           <b> Pin Code:</b>
          <%=f.text_field :home_pin_code,class: "form-control"%>
       </div>

    </div>

      <div class="col-sm-1"></div>
      <div class="col-sm-4">
      <div class="form-group">
    <h4><b><u><font color="brown">Office Address:</font></u></b></h4>
</div>
        <div class="form-group">
           <b>Line-1:</b>
           <%=f.text_field :office_address_line1,class: "form-control"%>
        </div>
        <div class="form-group">
           <b>City:</b>
             <%=f.text_field :office_city, :required=>false,class: "form-control"%>
        </div>
        <div class="form-group">
            <b>State:</b>
               <%=f.text_field :office_state,class: "form-control"%>
        </div>

       <div class="form-group">
           <b>Country:</b>
            <%=f.select :office_country_id,Country.all.collect{|c| [c.name,c.id]},{prompt:'Country'},{class: "form-control"}%>
       </div>
       <div class="form-group">
         <b>Pin Code:</b>
           <%=f.text_field :office_pin_code,class: "form-control"%>
       </div>

    </div>
  <div class="col-sm-5 col-sm-offset-5"> 
      <div class="form-actions">               
        <%= f.submit 'Update', class: "btn btn-success"%>
      </div>
    </div>
  </fieldset>        
 <% end %>
</div>
</div>
</div>
</div>

    
   
 




























