$("ul.errors4").html("")
<% if  @bank_field.errors.any? %>
		<%  @bank_field.errors.full_messages.each do |message| %>
		$("div.errors4").addClass("alert alert-danger alert-dismissable")  
		$("ul.errors4").append($("<li align ='left' style = 'width:300px'/>").html("<%= message.html_safe %>"))
		<% end %>
<% else %>

$('#flash').html("<%= j render 'layouts/messages'%>");
$('#add_bank_field').html("<%= j render 'bank_field'%>");
<%end%>