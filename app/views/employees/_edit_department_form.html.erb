<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Editing" %></h3>
</div>


<div class="modal-body">
<ul class="errors"></ul>
<%= form_for @employee_department,url:{:action=>'update_department',id: @employee_department.id},method: :patch,remote: true do |f|%>
 <div class="form-group">
          <div class="col-md-3"><b>Name:</b></div>
         <div class="col-md-8"><%=f.text_field :name, placeholder: "Name", class: "form-control"%></div>
      </div>
      <br><br>
      <div class="form-group">
          <div class="col-md-3"><b>Code:</b></div>
         <div class="col-md-8"><%=f.text_field :code, placeholder: "Code", class: "form-control"%></div>
      </div>
      <br><br>
      <div class="form-group">
         <div class="col-md-3"><b>Status:</b></div>
        <div class="col-md-8"><%= f.radio_button "status", "true", checked: "checked" %> &nbsp;<b>Active</b>&nbsp;&nbsp;
        <%= f.radio_button "status", "false"%> &nbsp;<b>Inactive</b></div>
       </div>
   <br><hr>
     <div class="form-group">
      <div class="col-sm-offset-3"> 
        <%= f.submit 'Update', class: "btn btn-success"%>&nbsp;
        	<%= link_to 'Cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%>
          </div>
          </div>
<% end %>

</div></div></div>