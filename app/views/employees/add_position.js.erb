$("ul.errors3").html("")
<% if  @employee_position.errors.any? %>
		<%  @employee_position.errors.full_messages.each do |message| %>
		$("div.errors3").addClass("alert alert-danger alert-dismissable")  
		$("ul.errors3").append($("<li align ='left' style = 'width:300px'/>").html("<%= message.html_safe %>"))
		<% end %>
<% else %>
$('#flash').html("<%= j render 'layouts/messages'%>");

$('#add_position').html("<%= j render 'position'%>");
<%end%>