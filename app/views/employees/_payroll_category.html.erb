
<div class="row">
<div class="col-md-3"></div>
<div class="box col-md-6">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Employee Payroll</h2>
    </div>
  <div class="box-content">
 <%= form_for @payroll_category_new, url:{action:'add_payroll_category'},remote:true do |c|%>
 <div class="errors"><ul class="errors"></ul></div>
   <fieldset>
	 <div class="form-group">
        <div class="col-md-4"><b>Category Name :</b></div>
         <div class="col-md-8"><%=c.text_field :name, placeholder: "Payroll Category Name", class: "form-control"%></div>
      </div>
    <br><br>
      <div class="form-group">
        <div class="col-md-4"><b>Percentage :</b></div>
         <div class="col-md-8"><%=c.text_field :percentage, placeholder: "Percentage", class: "form-control"%></div>
      </div>
      <br><br>
        <div class="form-group">
       <div class="col-md-4"><b>Percentage of :</b></div>
         <div class="col-md-8">
       <%= c.select :payroll_category_id,PayrollCategory.all.collect {|e| [e.name,e.id]},{prompt:true},class: "form-control"%>
       </div></div>
      <br><br>
      <div class="form-group">
        <div class="col-md-4"> <b>Status :</b></div>
        <div class="col-md-8"><%= c.radio_button "status", "true", checked: "checked" %> &nbsp;<b>Active</b>&nbsp;&nbsp;
        <%= c.radio_button "status", "false"%> &nbsp;<b>Inactive</b>
       </div></div>
         <br>

        <div class="form-group">
         <div class="col-md-offset-1">
        <%= c.check_box :is_deduction%>
         <b>Is Deduction?</b>
         </div></div>

   <div class="col-sm-4 col-sm-offset-4"> 
       <div class="form-actions">               
        <%= c.submit 'Create', class: "btn btn-primary"%>
      </div>
      </div>
   </fieldset>
    </div>
  </div>
 </div>
</div>

<div class="row">
  <div class="col-sm-6">
     <div class="form-group">
       <div class="row">
        <div class="box col-md-12">
         <div class="box-inner">
          <div class="box-header well">
            <h2>Earnings</h2>
          </div>
         <div class="box-content" style="overflow-y: scroll; height:220px">
              <% if @payroll_categories1.empty? %>
                <h4 align="center">No Record Found </h4>
              <% else %>
      
       <table id="datatable" class="table table-striped table-bordered responsive">
         <thead>
               <tr>
                 <th>Name</th>
                 <th>Operation</th>
                 <th>Status</th>
               </tr>

             </thead>
           
          <tbody>
           <%@payroll_categories1.each do |c| %>
			<tr>
			<td class="col-3"><%=c.name%></td>
			<td class="center">
              <div class="label-success label label-default">
              <i class="glyphicon glyphicon-edit icon-white"></i> 
              <%= link_to 'Edit',edit_payroll_category_employee_path(c),remote: true,class: "a-action"%></div>

              <div class="label-danger label label-default">
              <i class="glyphicon glyphicon-trash icon-white"></i> 
              <%= link_to 'Delete' ,destroy_payroll_category_employee_path(c),
                    method: :delete, data: { confirm: "Are you sure to delete #{c.name}?" },class: "a-action"%></div>
            </td>

            <% if c.status? %>
			<td>
            <div class="label-success label label-default">
             
			<%= link_to 'Active',active_payroll_category_employee_path(c),remote:true, data:{confirm: "Are you sure you want to inactivate?"},class: "a-action" %></div></td>	
			<% else %>
			<td>
			 <div class="label-danger label label-default"><%=link_to 'Inactive',inactive_payroll_category_employee_path(c),remote:true, data:{confirm: "Are you sure you want to inactivate?"},class: "a-action"%>
             </div>
			 </td>
			<%end%>


			</tr>
	    	<%end%>
          </tbody>
       </table>
       <%end%>
      </div>
    </div>
  </div>
 </div>
</div>
</div>
