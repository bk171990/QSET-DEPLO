<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Human Resources',employees_path %></li>
    <li><%= link_to 'HR Management',employee_management_employees_path %></li>
    
    <li>Employee Profile</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>

<div class="row">
  
  <div class="dropdown pull-right">
   <%= link_to 'Profile','#',class: "btn dropdown-toggle btn-primary-link btn-xs", id: "dropdownMenu1", :"data-toggle"=>"dropdown"%>
   <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
    <li role="presentation">
     
     <%=link_to "General",genral_profile_employees_path(@employee),remote:true%>
   </li>
   <li role="presentation">
     
     <%=link_to "Personal",personal_profile_employees_path(@employee),remote:true%>
   </li>
   <li role="presentation">
    <%=link_to "Address",address_profile_employees_path(@employee),remote:true%>
  </li>
  <li role="presentation">
    <%=link_to "Contact",contact_profile_employees_path(@employee),remote:true%>
  </li>
  <li role="presentation">
    <%=link_to "Bank Information",bank_info_employees_path(@employee),remote:true%>
  </li>
  
</ul>
</div>

<div class="dropdown pull-right">
  <%= link_to 'Salary','#',class: "btn dropdown-toggle btn-primary-link btn-xs", id: "dropdownMenu1", :"data-toggle"=>"dropdown", style: "margin-right:5px"%>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
    <li role="presentation">
     
     <%=link_to "Payroll",emp_payroll_employees_path(@employee),remote:true%>
   </li>
   <li role="presentation">
     
     <%=link_to "Payslip",emp_payslip_employees_path(@employee),remote:true%>
   </li>
   
 </ul>
</div>

<div class="dropdown pull-right">
  <%= link_to "Delete",remove_employees_path(@employee), class: "btn btn-primary-link btn-xs", style: "margin-right:5px;"%>
</div>

<div class="dropdown pull-right">
  <%= link_to "Timetable",employee_timetable_time_tables_path(@employee),class: "btn btn-primary-link btn-xs", style:"margin-right:5px;"%>
</div>
</div>
<hr>



<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-content">

        <div class="row">
          <div class="col-md-8">
           <div id ="student_main_info">
            <h3 align="left"> <%= @employee.first_name %> <%= @employee.middle_name %> <%= @employee.last_name %>  </h3>
            <h4 align="left"> Employee Id : <%=@employee.id%> </h4>
            <h4 align="left"> Employee Number : <%=@employee.employee_number%> </h4>
          </div>
        </div>
        <br>
        <div class="col-md-3">
          <div id="profile_picture_display">
            <% unless @employee.image.blank? %>
            <%= image_tag @employee.image%>
            <% else %>
            <%= image_tag "employee.png" %>
            <% end %>
          </div>
        </div>
      </div>
      <hr>
      <div id="profile"><%=render'disp_genral_profile'%></div>
    </div>
  </div>
</div>
</div>
