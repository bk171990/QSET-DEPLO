<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
     <li><%= link_to 'Human Resources',employees_path %></li>
     <li><%= link_to 'HR Management',employee_management_employees_path %></li>
     <li><%= link_to 'Employee Profile',profile_employees_path(@employee.id)%></li>
     <li>Employee Details Update</li>
  </ul>
</div>
Note:<font color="red">Fields Marked with * must be filled</font>
<div id="flash"><%= render 'layouts/messages'%></div>


<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Employee Details Update</h2>
       
      </div>
        <div class="box-content">
<%= form_for @employee ,url:{action:'update_edit_contact_profile',format:@employee.id} do |f| %>

    <fieldset>
     <% if @employee.errors.any? %>
        <div class="alert alert-danger" style="width:500px" >
          <h3>Error prohibited to from being saved:</h3>
          <ul>
           <% @employee.errors.full_messages.each do |msg| %>
              <li style="width:500px" align="left"><%= msg %></li>
            <% end %>
          </ul>
      
      </div>
          <% end %>
          <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
       
          <div class="form-group">
      <b>Office Phone-1:</b>
         <%=f.text_field :office_phone1,placeholder: "Office Phone1",class: "form-control"%>
       </div>
           <div class="form-group">
       <b>Office Phone-2:</b>
         <%=f.text_field :office_phone2,placeholder: "Office Phone2",:required=>false,class: "form-control"%>
       </div>
           <div class="form-group">
       <b>Mobile:</b>
         <%=f.text_field :mobile_phone,placeholder: "Mobile",class: "form-control"%>
       </div>

    </div>

      <div class="col-sm-1"></div>
      <div class="col-sm-4">
             <div class="form-group">
       <b>Home Phone:</b>
         <%=f.text_field :home_phone,placeholder: "Home Phone",class: "form-control"%>
       </div>

        <div class="form-group">
       <b>Fax:</b>
         <%=f.text_field :fax,placeholder: "Fax",class: "form-control"%>
       </div>

    </div>
  <div class="col-sm-5 col-sm-offset-5"> 
      <div class="form-actions">               
        <%= f.submit 'Update', class: "btn btn-success"%>
      </div>
    </div>
  </fieldset>        
 <% end %>
</div>
</div>
</div>
</div>

    
   
 




























