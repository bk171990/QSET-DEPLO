 <%= link_to 'New Sms', new_bulk_message_path, class: "btn btn-primary-link btn-xs" %>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well"></div>
      <div class="box-content">
        <table id="datatable" class="table table-striped table-bordered responsive">
            <thead>
              <th>Sl no.</th>
              <th>Message Body</th>
              <th>Contact</th>
              <th></th>
            </thead>
            <tbody>
              <% @bulk_messages.each_with_index do |message,i| %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= message.body %></td>
                  <td><%= message.student.phone1 %></td>
                </tr>
            </tbody>
          <%end%>
        </table>
      </div>
    </div>
  </div>
</div>

