<div>
	<ul class="breadcrumb">
		<li><%= link_to 'Home',dashboard_home_index_path %></li>
		<li><%= link_to 'Inventory Management',main_page_books_path%></li>
		<li>View Monthly Fine Reports</li>
	</ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
	<div class="col-md-12">
		<div class="pull-right">
			<%= link_to 'Pdf Report',fine_report_fine_collections_path(start_date:@start_date,end_date:@end_date,format:"pdf"),class: "btn btn-primary-link btn-xs",target: '_blank'%>
		</div>
	</div>
</div>
<hr>
<div class="row">
	<div class="box col-md-12">
		<div class="box-inner">
			<div class="box-header well">
				<h2>List of Fine collections</h2>
			</div>
			<div class="box-content">
				
<div class="box-content" style="overflow-x: auto;height: 230px;width: 100%;">
  <table id="datatable" class="table table-striped table-bordered responsive">
					<thead>
						<tr>
						  <th>Sr.No</th>
						  <th>Batch and Course</th>
                          <th>Student Name</th>
                          <th>Admission No</th>
                          <th>Book Title</th>
                          <th>Book No</th>
                          <th>Total Fine</th> 
					    </tr>
					</thead>
			<tbody>
				  <%total_amount=0%>
                <% @fines.each_with_index do |fine,i|%>
			      <tr>
			       <td><%=i+1%></td>
			        <td><%= fine.student.batch.course.course_name.capitalize+" "+fine.student.batch.course.section_name.capitalize+" "+fine.student.batch.name.capitalize %></td>
				    <td><%= fine.student.first_name+" "+fine.student.last_name%></td>
				    <td><%= fine.student.admission_no %></td>
                    <td><%= fine.book.title %></td>
                    <td><%= fine.book.book_number %></td>
                    <td><%= fine.amount%></td>

				  </tr>
				 <%total_amount+= fine.amount.to_f%>
                  <%fine.update(total_fine: total_amount)%>
                 <%end%>
                 <tr align="right">
                   <th></th>
                   <th></th>
                   <th></th>
                   <th></th>
                   <th></th>
                   <th></th>
                   <th><b>Total:<%=total_amount%></b></th>
                 </tr>  
		       </tbody>
			  </table>
	    	</div>
		   </div>
		  </div>
	     </div>