$("ul.errors").html("")
<% if @master_category.errors.any? %>
		<% @master_category.errors.full_messages.each do |message| %>
		$("div.errors").addClass("alert alert-danger alert-dismissable")  
		$("ul.errors").append($("<li align ='left' style = 'width:300px'/>").html("<%= message.html_safe %>"))
		<% end %>
<% else %>
$("#myModal").modal("hide");
$('#flash').html("<%= j render 'layouts/messages'%>")
<% end %>