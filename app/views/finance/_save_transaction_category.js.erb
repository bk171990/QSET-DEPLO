$("ul.errors").html("")
<% if @transaction_category.errors.any? %>
		<% @transaction_category.errors.full_messages.each do |message| %>
		$("div.errors").addClass("alert alert-danger alert-dismissable")  
		$("ul.errors").append($("<li align ='left' style = 'width:300px'/>").html("<%= message.html_safe %>"))
		<% end %>
<% else %>
  $("#mymodal").modal("hide")
  $('#categories').html("<%= j render 'transaction_categories'%>");
  $('#flash').html("<%= j render 'layouts/messages'%>");
<% end %> 