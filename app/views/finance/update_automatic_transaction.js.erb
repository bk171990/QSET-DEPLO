$("ul.errors").html("")
<% if @automatic_transaction.errors.any? %>
		<% @automatic_transaction.errors.full_messages.each do |message| %>
		$("div.errors").addClass("alert alert-danger alert-dismissable")  
		$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
		<% end %>
<% else %>
  $("#myModal").modal("hide");
  $('#auto_transaction').html("<%= j render 'automatic_transaction_details'%>");
  $('#flash').html("<%= j render 'layouts/messages'%>")
<% end %>