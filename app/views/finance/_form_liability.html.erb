<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Create New Liability" %></h3>
</div>

<div class="modal-body">
<div class="errors">
<ul class="errors"></ul></div>
<%= form_for @liability,url:{action: 'create_liability'},remote: true do |f|%>
 <div class="row">
    <div class="col-md-4 col-md-offset-1"><b>Title :</b></div>
    <div class="col-md-7"><%=f.text_field :title,placeholder:"Title",class: "form-control"%></div>
  </div><br/>
  <div class="row">
    <div class="col-md-4 col-md-offset-1"><b>Description :</b></div>
    <div class="col-md-7"><%= f.text_field :description,placeholder: "Description",class: "form-control"%></div>
  </div><br/>
  <div class="row">
    <div class="col-md-4 col-md-offset-1"><b>Amount :</b></div>
    <div class="col-md-7"><%=f.text_field :amount,placeholder: "Amount",class: "form-control"%></div>
  </div><hr>
  <div class="row">
    <div class="col-md-12">
      <center>
        <%= f.submit 'Submit', class: "btn btn-primary"%>&nbsp;
        <%= link_to 'Cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%>
      </center>
    </div>
  </div>
<% end %>
</div>
</div>
</div>