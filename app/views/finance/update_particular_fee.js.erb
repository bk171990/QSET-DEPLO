$("ul.errors").html("")
<% if @fee.errors.any? %>
		<% @fee.errors.full_messages.each do |message| %>
		$("div.errors").addClass("alert alert-danger alert-dismissable")  
		$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
		<% end %>
<% else %>
$("#list").html("<%= j render 'particular_fees_list' %>");
$("#Modal").modal('hide');
$('#flash').html("<%= j render 'layouts/messages'%>")
<%end%>