<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Finance',finance_index_path %></li>
    <li><%= link_to 'Donation',donation_finance_index_path %></li>
    <li>Donors list</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="box col-md-12">
	  <div class="box-inner">
	    <div class="box-header well">
	      <h2>List of donors</h2>
	    </div>
	    <div class="box-content">
		    <% unless @donors.empty?%>
		      <table id="datatable" class="table table-striped table-bordered responsive">
		        <thead>
		          <tr>
		            <th>Name</th>
								<th>Description</th>
								<th>Amount</th>
								<th>Created At</th>
								<th>Action</th>
		          </tr>
		        </thead>
		        <tbody>
		        <% @donors.each do |d| %>
		          <tr>
		            <td>
		              <%= link_to d.donor,donation_receipt_finance_path(d)%>
		            </td>
		            <td class="col-3"><%= d.description%></td>
		            <td class="col-3"><%= d.amount%></td>
								<td class="col-3"><%= d.created_at.to_date%></td>
		            <td class="center">
		              <div class="label-success label label-default">
		              <i class="glyphicon glyphicon-edit icon-white"></i> 
		              <%= link_to 'Edit',edit_donation_finance_path(d), class: 'a-action'%></div>

		              <div class="label-danger label label-default">
		              <i class="glyphicon glyphicon-trash icon-white"></i> 
		              <%= link_to 'Delete' ,delete_donation_finance_path(d),method: :delete, data:{confirm:"Are You sure to delete donor '#{d.donor}'?"}, class: 'a-action'%></td>	</div>
		            </td>
		          </tr>
		        <% end %>
		        </tbody>
		      </table>
		    <%else%>
					<center><h5>No donor found</h5></center>
				<%end%>
	    </div>
	  </div>
  </div>
</div>