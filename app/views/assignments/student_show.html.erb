 <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well"></div>
      <div class="box-content">
<div>
	<ul class="breadcrumb">
		<li><%= link_to 'Assignment',assignments_path %></li>
		<li>Assignment</li>
	</ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<hr>
<div class="form-group">
  <h4><b><font color="brown">Assignment Details:</font></b></h4>
</div>
<hr>
 <div class="row">
          <div class="col-md-6">
            <div class="form-group">
	<div class="col-md-3"><b>Title:</b></div>
	<div class="col-md-3"><%= @assignment.title%></div>
	 </div><br>

    <div class="form-group">
	<div class="col-md-3"><b>Batch:</b> </div>
	<div class="col-md-3"><%= @assignment.batch.name %></div>
	 </div><br>

	 <div class="form-group">
	<div class="col-md-3"><b>Subject:</b></div>
	<div class="col-md-3"><%= @assignment.assignment_subject %></div>
	</div><br>

	
<br>
 <div class="form-group">	
	<div class="col-md-3"><b>Content:</b> </div>
	 <div class="well col-md-12">
	<div class="col-md-12"><%= render 'question' %></div>
	 </div><br>
</div>
</div>
</div>

<div class="row">
          <div class="col-md-6">
            <div class="form-group">
	<div class="col-md-3"><b>Due Date:</b></div>
	<div class="col-md-3"><%= @assignment.due_date %></div>
	<%=t("Complete assignment till  #{@assignment.due_date}")%>
</div>
<br>
<hr>
</div>
</div>



<table class="table table-striped table-bordered responsive">
        <thead>
       <tr>
      
      </tr>
    </thead>
  <tbody>  
     <%@assignment_attachments.each_with_index do |p,i|%>
        <tr>
          <td><%= i+1 %></td>
          <td><%= p.file%></td>
          <td><%= link_to 'Download Assignment',p.file_url,class: "btn btn-primary btn-sm" %></td>
	 
        </tr>      
      <% end %>     
   </tbody>
      </table>





