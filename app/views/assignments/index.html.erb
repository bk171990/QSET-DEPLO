<div>
  <ul class="breadcrumb">
    <li>Assigment Details</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>
   <hr>
   <div class= "row">
   <div class="pull-right">
   <%= link_to "New Assignment",new_assignment_path,class: "btn btn-danger btn-sm" %>
   </div></div>
<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Assignment</h2>
    </div>
  <div class="box-content" style="overflow-y: scroll; height:auto">

      <table class="table table-striped table-bordered responsive">
        <thead>
       <tr>
        <th>Sr No</th>
        <th>Batch</th>
        <th>Course</th>
        <th>Subject</th>
        <th>Assignment Name</th>
        <th>Due Date</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
  <tbody>  
      <% @assignments.each_with_index do |a,i| %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= a.batch.name if  a.batch%></td>
          <td><%= a.batch.course.course_name if  a.batch%></td>
          <td><%= a.assignment_subject %></td>
          <td><%= link_to a.title, assignment_path(a) %></td>
          <td><%= a.due_date %></td> 
          <td><%= link_to 'Edit Assignment' , edit_assignment_path(a), class: 'btn btn-primary btn-xs'%></td>
                    <td><%= link_to 'Delete Assignment', assignment_path(a),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %></td> 
          
        </tr>      
      <% end %>     
   </tbody>
      </table>
    </div>
  </div>
  </div>
</div>