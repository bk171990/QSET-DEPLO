<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h3>Update Event</h3>
		</div>
		<div class="modal-body">
			<%= form_for @event,url:{action: "update_event" ,id: @event.id} do |e| %>

				<div class="row">
				  <div class="col-md-4 col-md-offset-1">
				    <b>Title:<span style="color:red">*</span></b>
				  </div>
				  <div class="col-md-7">
				    <%=e.text_field :title,class: "form-control",required: true%>
				  </div>
				</div><br/>

				<div class="row">
				  <div class="col-md-4 col-md-offset-1">
				    <b>Description:</b>
				  </div>
				  <div class="col-md-7">
				    <%=e.text_field :description,class: "form-control",required: true%>
				  </div>
				</div><br/>

				<div class="row">
				  <div class="col-md-4 col-md-offset-1">
				    <b>Start Date:<span style="color:red">*</span></b>
				  </div>
				  <div class="col-md-7">
				    <%=e.date_field :start_date,class: "form-control",required: true%>
				  </div>
				</div><br/>
				
				<div class="row">
				  <div class="col-md-4 col-md-offset-1">
				    <b>End Date:<span style="color:red">*</span></b>
				  </div>
				  <div class="col-md-7">
				    <%=e.date_field :end_date,class: "form-control",required: true%>
				  </div>
				</div><br/>
				<center><%= e.submit "Update",class: "btn btn-success"%></center>
			<%end%>
		</div>
	</div>
</div>

