  <div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Library Management',main_page_books_path %></li>
    <li><%= link_to 'Search Student',search_student_fines_path %></li>
    <li>Pay Fines</li>
  </ul>
</div>

<div class="row">
        <div class="box col-md-12">
          <div class="box-inner">
            <div class="box-header well">
              <h2>Pay Fine</h2>
            </div>
            <div class="box-content">
              <% if @dibs.empty? %>
                <h4 align="center">No Record Found </h4>
              <% else %>
                <table id="datatable" class="table table-striped table-bordered responsive">
                  <thead>
                    <tr>
                      <th>Sr. No.</th>
                      <th>Batch and Course</th>
                      <th>Student Name</th>
                      <th>Admission No</th>
                      <th>Book Number</th>
                      <th>Book Title</th>
                      <th>Fine Amount</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>

                    <%@dibs.each_with_index do |d,i| %>
                      <tr>

                   <%if d.fine!=0%>
                        <td><%= i+1 %></td>
                        <td><%= d.student.batch.course.course_name.capitalize+" "+d.student.batch.course.section_name.capitalize+" "+d.student.batch.name.capitalize%></center></td>
                        <td><%=d.student.first_name+' '+d.student.last_name%></td>
                        <td><%=d.student.admission_no%></td>
                        <td><%=d.book.book_number%></td>
                        <td><%=d.book.title%></td>
                        <td><%=d.fine%></td>
                        <td><%=d.book.status%></td>
                         <td><div class="label-success label label-default">
                         <i class="glyphicon glyphicon-usd icon-white"></i> <%= link_to 'Pay Fine',student_fine_fine_path(d),class: "a-action"%></td>
                         </div>
                          </div>
                        </td>
                      </tr>
                    <%end%>
                    <%end%>
                  <%end%>
                
                  </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>