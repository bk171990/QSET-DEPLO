 <div class = "pull-right">
      <%= link_to 'New School',new_school_path,class:'btn btn-primary' %>
      </div>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>School List</h2>
      </div>
     
    <div class="box-content" style="overflow-y: scroll; height:230px,width:100%" >
      <table id="datatable" class="table table-striped table-bordered responsive">
        <thead>
          <tr>
            <th>School Name:</th>
            <th>Contact:</th>
            <th>School Address:</th>
            <th>School Organization:</th>
            <th>Action:</th>
          </tr>
        </thead>
        
        <tbody>
     <% @schools.each do |school| %>
          <tr>
            <td><%=school.name%></td>
             <td><%=school.contact%></td>
             <td><%=school.address%></td>
             <td><%=school.organization%></td>
              <td><%= link_to 'View', school_path(school),class: 'btn btn-primary' %>
             <td><%= link_to 'Edit', edit_school_path(school),class: 'btn btn-success' %>
             <td><%= link_to 'Destroy', school_path(school),
              method: :delete,
              data: { confirm: 'Are you sure?' } ,class: 'btn btn-danger'%></td>
            <td class="center">
              
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>