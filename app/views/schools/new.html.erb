<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li>New</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<br/>

<div class="row">
  <div class="col-md-2"></div>
    <div class="box col-md-6">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>New School
                </h2>
            </div>

            <div class="box-content">
            <%= form_for :school,url:{action:'create',controller:'schools'} do |b|%>
            <fieldset>
        <div class="col-sm-7 col-sm-offset-1">
                  <div class="form-group">
                    <b>School Name :</b>
            <%=b.text_field :name, class: "form-control", style: "width: 350px", placeholder: ""%>
                  </div>
                  <div class="form-group">
                  <b>User-Name:</b>
            <%=b.text_field :username, class: "form-control", style: "width: 350px", placeholder: ""%>
                </div>
                <div class="form-group">
                  <b>Password:</b>
             <%=b.text_field :password,readonly: true,:value=> @school.password, class: "form-control"%>
                </div>

                  <div class="form-group">
                  <b>School Contact :</b>
            <%=b.text_field :contact, class: "form-control", style: "width: 350px", placeholder: ""%>
                </div>
                <div class="form-group">
                  <b>School Email :</b>
            <%=b.text_field :email, class: "form-control", style: "width: 350px", placeholder: ""%>
                </div>
                <div class="form-group">
                   <b>School Address:</b>
            <%=b.text_area :address, class: "form-control", style: "width: 350px", placeholder: ""%>
                </div>
                <div class="form-group">
                   <b>School Organization:</b>
            <%=b.text_field :organization, class: "form-control", style: "width: 350px", placeholder: ""%>
                </div>

                
              <div class="col-sm-7 col-sm-offset-6"> 
                <div class="form-actions">               
                <%= b.submit 'Create', class: "btn btn-primary"%>
                </div>
            </div>
                
              </div>
            </fieldset>
            <% end %>
            </div>
        </div>
    </div>
</div>