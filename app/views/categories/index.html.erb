<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Settings',setting_index_path %></li>
    <li>Student Category</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>

<div class="row">
  <div class="box col-md-6">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Student Category</h2>
      </div>
      
    <div class="box-content">
      <%= form_for :category, url:  categories_path do |f| %>
      
      <div class="col-sm-6">
        <div class="box">
          <div class="lead">
            <i class="icon-tags text-contrast"></i>Categories</div>
            <small class="text-muted">Every student in the department belong to a category, it is an important part of the institution.</small>
        </div>
      </div>
      <div class="col-sm-6">
        <fieldset>
          <%=categories_error!%>
          <br/>
          <div class="form-group">
            <b>Category Name :</b>
            <%= f.text_field :name, class: "form-control", placeholder: "Category Name" %>       
          </div>
        </fieldset>
      </div>

      <div class="form-actions">
        <div class="row">
        <div class="col-sm-7 col-sm-offset-5">                
         <i class="icon-ok-circle "></i>
            <%= f.submit 'Create', class: "btn btn-group btn-primary"%>
        </div>
        </div>
      </div>
    <%end%>
    </div>
    </div>
  </div>

  <div class="box col-md-6">
    <div class="box-inner">
    <div class="group-header">
    <div class="box-header well">
      <h2>Student Category Details</h2>
    </div>
    <div class="box-content">
      <div class="row">
        <div class="text-center">
         <small class="text-muted">List of all categories that are currently been used in the institution for students</small>
        </div>
      </div>
    </div>
      <table id="datatable" class="table table-striped table-bordered responsive">
        <thead>
          <tr>
            <th>Category Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        <% @categorys.each do |c| %>
          <tr>
            <td><%= c.name %></td>
            <td class="center">
              <div class="label-success label label-default">
              <i class="glyphicon glyphicon-edit icon-white"></i> 
              <%= link_to 'Edit', edit_category_path(c), remote:true, class: "a-action"%></div>

              <div class="label-danger label label-default">
              <i class="glyphicon glyphicon-trash icon-white"></i> 
              <%= link_to 'Delete', category_path(c),method: :delete, data: { confirm: "Are you sure to delete #{c.name} category"}, class: "a-action"%></div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  </div>
</div>
<div id="modal" class="modal fade"></div>
