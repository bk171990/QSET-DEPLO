<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
<h3><%= "Update Rank" %></h3>
</div>
<div class="modal-body">
        <ul class="errors"></ul>
<%= form_for [@course,@rank_lev1],url:{:action=>'update_rank',course_id: @course.id,id: @rank_lev1},method: :patch,remote: true do |f|%>
<div class="form-group">
  <b>Name:</b>
  <%=f.text_field :name ,style: "width: 250px",placeholder:"Name",class: "form-control"%>
</div>
<div class="form-group">
  <b>Marks:</b>
  <%=f.text_field :marks,style: "width: 250px",placeholder:"Marks",class: "form-control"%>
</div>
<div class="form-group">
 <b>Marks Limit Type:</b>
  <%=f.select :marks_limit_type, ["Upper", "Lower", "Exact"] , {}, {class: "form-control",style: "width: 250px"}%>
</div>
<div class="form-group">
  <b>Numder Of Subject:</b>
  <%=f.text_field :subject_count ,style: "width: 250px",placeholder:"Number of Subject",class: "form-control"%>
</div>
<div class="form-group">
  <b>Subject Limit Type:</b>
  <%=f.select :subject_limit_type, ["Upper", "Lower", "Exact"] ,{}, {class: "form-control",style: "width: 250px"}%>
</div>
<div class="form-group">
  <%=f.check_box :full_course, :checked => false%>
  &nbsp;&nbsp;
  <%= f.label :Consider_full_course_duration? , class: "control-label"%>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <center>
      <%= f.submit 'Update', class: "btn btn-success"%>&nbsp;
      <%= link_to 'Cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%>
    </center>
  </div>
</div>
<% end %>
</div>
</div></div>