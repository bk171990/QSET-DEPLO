<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Update Class Designation" %></h3>
</div>

<div class="modal-body">
        <ul class="errors"></ul>
<%= form_for [@course,@class_des1],url:{:action=>'update',course_id:@course.id,class_des:@class_des1.id},method: :patch,remote: true do |f|%>
<div class="row">
	  
	  <div class="col-md-3"><b>Name :</b></div>
	  <div class="col-md-8"><%=f.text_field :name,placeholder:"Name",class: "form-control"%></div>
	</div><br/>
	<div class="row">
	 
	  <div class="col-md-3"><b>Marks :</b></div>
	  <div class="col-md-8"><%= f.text_field :marks,placeholder: "Marks",class: "form-control"%></div>
	</div><hr>
	<div class="row">
	  <div class="col-md-12">
	    <center>
	      <%= f.submit 'Update', class: "btn btn-success"%>&nbsp;
	      <%= link_to 'Cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%>
	    </center>
	  </div>
	</div>
<% end %>
</div>
</div></div>