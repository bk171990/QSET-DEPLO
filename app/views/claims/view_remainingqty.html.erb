<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Inventory Management',main_page_inventory_store_items_path %></li>
    <li>View All Remaining List Of Items</li>
  </ul>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
        <%= link_to 'Search Other Claim', '/claims/other_claim', class: "btn btn-primary-link btn-xs" %>
    </div>
  </div>
</div>

<br>

<div class="box-inner">
 <div class="box-header well" data-original-title="">
 <h2>List Of Items</h2>
 </div>

<div class="box-content" style="overflow-y: auto;height: 230px;width: 100%;">
<table id="datatable" class="table table-striped table-bordered responsive">
  <tr class="tr-head">
   <thead>
    <tr>
      <th>Sr.No</th>
      <th>Batch and Course</th>
      <th>Purchase Date</th>
      <th>Claim Date</th>
      <th>Item Name</th>
      <th>Description</th>
      <th>Total Quantity</th>
      <th>Actual Price(per Book)</th>
      <th>Actual Total</th>
      <th>Claim Name</th>
      <th>Claim Quantity</th>
      <th>Remaining Quantity</th>
      <th>Claim Total</th> 
      <th>Remaining Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
 
   <% @claims.each_with_index do |s,i| %>
      <tr>
        <td><%= i+1 %></td> 
       <%claimqty=0%>
        <%return_qty=0%>
        <%return_item=0%>
        <%remaining_total=0%>
        <%unit_price=0%>
        <%claimqty= s.claim_quantity%>
       <td><%= s.batch.course.course_name.capitalize+" "+s.batch.course.section_name.capitalize+" "+s.batch.name.capitalize if s.batch%></td>
        <td><%= s.inventory_store_item.date if s.inventory_store_item%></td>
        <td><%= s.purchase_date%></td>
        <td><%= s.inventory_store_item.item_name if s.inventory_store_item%></td>
        <td><%= s.inventory_store_item.category if s.inventory_store_item%></td>

        <td><%= return_item = s.inventory_store_item.quantity if s.inventory_store_item%></td>
        <td><%= unit_price = s.inventory_store_item.unit_price if s.inventory_store_item%></td>
        <td><%=s.inventory_store_item.total if s.inventory_store_item%></td>
      
      <% if s.claim_item? %>
        <td><%= s.claim_item%></td>
        <td><%=s.claim_quantity%></td>

      
      <%else%>
      
        <td><%= s.claim_item%></td>
        <td><%=return_qty = return_item.to_i - claimqty.to_i%></td>

        <td><%= s.inventory_store_item.quantity.to_i - s.claim_quantity.to_i%></td>
        

        <td><%=remaining_total = claimqty.to_i * unit_price.to_i%></td>

        <td><%=remaining_total = s.inventory_store_item.total.to_i - remaining_total.to_i%></td>

      </tr>
   <% end %>
   <%end%>
  </tbody>
</table>

       