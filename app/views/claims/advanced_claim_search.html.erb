<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Inventory Management',main_page_indents_path %></li>
    <li>Claim List</li>
  </ul>
</div>

<div class="box-inner">
 <div class="box-header well" data-original-title="">
 <h2>Claim List</h2>
 </div>

<div class="box-content" style="overflow-y: scroll; height:auto">
<% if @claims.empty? %>
  <h4 align="center">No Record Found </h4>
<% else %>
<table id="datatable" class="table table-striped table-bordered responsive">
  <tr class="tr-head">
   <thead>
    <tr>
    
      <th>Batch and Course</th>
      <th>Purchase Date</th>
      <th>Item Name</th>
      <th>Description</th>
      <th>Total Quantity</th>
      <th>Actual Price(per Book)</th>
      <th>Actual Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
   <% @claims.each do |s,i| %>
      <tr>
        
        <td><%= s.batch.course.course_name.capitalize+" "+s.batch.course.section_name.capitalize+" "+s.batch.name.capitalize%></td>
        <td><%= s.inventory_store_item.date if s.inventory_store_item%></td>
        <td><%= s.inventory_store_item.item_name if s.inventory_store_item%></td>
        <td><%= s.inventory_store_item.category if s.inventory_store_item%></td>
     <%end%>
        
      </tr>
      <%end%>
  </tbody>
</table>