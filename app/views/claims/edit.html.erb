 <div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Inventory Management', main_page_indents_path %></li>
    <li>Edit Claim</li>
  </ul>
</div>

  <div class="row">
   <div class="col-md-3"></div>
   <div class="box col-md-6">
        <%= form_for @claim ,url:{contoller: 'claims',action:'update'} do |c|%>
          <div class="errors"><ul class="errors"></ul></div>
          <fieldset>
            <div class="form-group">
              <div class="col-md-3"><b>Purchase Date:</b></div>
                <%=c.text_field :purchase_date,:value => Time.now.strftime('%Y-%m-%d'),class: "datepicker form-control",style:"width:250px"%>
            </div>
            
            <div class="form-group">
              <div class="col-md-3"><b>Item Name:</b></div>
              <%=c.text_field :claim_item, placeholder: "Name", class: "form-control",style:"width:250px"%>
            </div>

            <div class="form-group">
              <div class="col-md-3"><b>Quantity</b></div>
              <%=c.text_field :claim_quantity, placeholder: "Quantity", class: "form-control",style:"width:250px"%>
            </div>

            <div class="form-group">
              <div class="col-md-3"><b>Comments</b></div>
              <%=c.text_field :comment, placeholder: "Comment", class: "form-control",style:"width:250px"%>
            </div>
   
            <div class="col-sm-4 col-sm-offset-4"> 
              <div class="form-actions">               
                <%= c.submit 'Save', class: "btn btn-primary"%>
              </div>
            </div>
          </fieldset>
        <%end%>  
   </div>
  </div> 