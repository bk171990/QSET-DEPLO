<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Claim'%></li>
    <li><%= link_to 'Inventory Management',employee_claim_claims_path%></li>
    <li> View Batch-Wise Claim List</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to 'New Claim', new_claim_path(@batch), class: "btn btn-primary-link btn-xs" %>
    </div>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Claim</h2>
      </div>
      <div class="box-content" style="overflow-y: auto;width: 100%;">
  <table id="datatable" class="table table-striped table-bordered responsive">
          <thead>
            <th>Claim Date</th>
            <th>Store Item</th>
            <th>Claim Name</th>
            <th>Claim Quantity</th>
            <th>comment</th>
            <th>Action</th>
          </thead>
            <tbody>
              <% @claims.each do |eg|%>
                <tr>
                <td><%= eg.purchase_date%></td>
                <td><%= eg.inventory_store_item.item_name if eg.inventory_store_item%></td>
                <td><%= eg.claim_item%></td>
                <td><%= eg.claim_quantity%></td>
                <td><%= eg.comment%></td>
                  
                  <td>
                    <% unless eg.result_published? %>
                      <div class="label-danger label label-default">
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        <%= link_to 'Delete',eg,method: :delete,
                        data:{confirm:"Are you sure to delete ClaimList: #{eg.claim_item}"},class: "a-action"%>
                      </div>
                    <%end%>&nbsp;&nbsp;&nbsp;
                    <% if eg.result_published? %>
                      <div class="label-success label label-default">
                        <i class="glyphicon glyphicon-saved icon-white"></i>
                        <%= link_to 'Approved','publish_result_claims_path(@claim)',class: "a-action"%>
                      </div>
                    <%else%>
                      <div class="label-primary label label-default">
                        <i class="glyphicon glyphicon-check icon-white"></i>
                        <% if eg.is_published? %>
                          <%= link_to 'claimed',publish_claim_claims_path(eg), remote:true, class: "a-action" ,data:{confirm: "You Already Claimed"}%>
                        <%else%>
                          <%= link_to 'Claim',publish_claim_claims_path(eg), remote:true, class: "a-action" %>
                        <%end%>
                      </div>
                    <%end%>
                  </td>
                  <td id="publish_claim<%=eg.id%>"%></td>
                </tr>
              <%end%>
            </tbody>
        </table>
      </div>
    </div>
  </div>
</div>