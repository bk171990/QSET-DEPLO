<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Library Management',main_page_books_path %></li>
    <li><%= link_to 'Library Setting',setting_book_movements_path %></li>
    <li>Add Book Publications</li>
  </ul>
</div>

<div class="row">
  <div class="col-md-3"></div>
  <div class="box col-md-6">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Add Book Publications</h2>
      </div>

  <div class="box-content">
    <%= form_for @publication do |c|%>
     <div class="errors"><ul class="errors"></ul></div>
     <fieldset>

           
      <div class="form-group">
        <div class="col-md-3"><b>Book Publication:</b></div>
        <%=c.text_field :name, placeholder: "Name", class: "form-control",style:"width:250px"%>
      </div>

      <div class="col-sm-4 col-sm-offset-4"> 
        <div class="form-actions">               
          <%= c.submit 'Create', class: "btn btn-primary"%>
        </div>
      </div>
    </fieldset>
    <%end%>  
  </div>
 </div>
</div>
</div>


<div class="row">
  <div class="col-sm-10">
     <div class="form-group">
       <div class="row">
        <div class="box col-md-12">
          <div class="box-inner">
            <div class="box-header well">
              <h2>View All Book publications</h2>
            </div>
            <div class="box-content" style="overflow-y: scroll; height:280px">
              <% if @publications.empty? %>
                <h4 align="center">No Record Found </h4>
              <% else %>
                <table id="datatable" class="table table-striped table-bordered responsive">
                  <thead>
                    <tr>
                      <th>Sr. No.</th>
                      <th>Publication</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%@publications.each_with_index do |p,i| %>
                      <tr>
                        <td><%=i+1%></td>
                        <td><%= p.name %></td>
                        <td><div class="label-success label label-default">
                         <i class="glyphicon glyphicon-pencil icon-white"></i> <%= link_to 'Edit', edit_publication_path(p) %></td>
                        <td><div class="label-danger label label-default">
                        <i class="glyphicon glyphicon-trash icon-white"><%= link_to 'Destroy', publication_path(p), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  
                         </div>
                          </div>
                        </td>
                      </tr>
                    <%end%>
                  </tbody>
                </table>
              <%end%>  
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>