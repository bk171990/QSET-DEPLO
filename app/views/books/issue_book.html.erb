<div class="row">
 <div class="col-md-3"></div>
  <div class="box col-md-6"> 
  <div class="form-group">
   <b>Search Book </b>


<%= form_tag(books_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search status" %>
<%= submit_tag "Filter" %>
<% end %>

<% if (@books) %>
  <% if (@books.empty?) %>
    <p>No Record found.</p>
<% else %>
   <p> Search the book from library stuff.</p>
<% end %>
<%end%>
</div>
</div>
</div>



<div class="row">
  <div class="col-md-3"></div>
  <div class="box col-md-6">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Issue Books</h2>
      </div>

       <div class="box-content">

       <%= form_for @issuebook ,url: {controller: 'books',action: 'create_issue'} do |c|%>
       
          <div class="errors"><ul class="errors"></ul></div>
          <fieldset>

            <div class="form-group">
              <div class="col-md-3"><b>Issue Date:</b></div>
              <%=c.text_field :Issue_date,class: "form-control datepicker",style:"width:250px"%>
            </div>
            
            <div class="form-group">
              <div class="col-md-3"><b>Due Date:</b></div>
              <%=c.text_field :Due_date,class: "form-control datepicker",style:"width:250px"%>
            </div>

             <div class="col-sm-4 col-sm-offset-4"> 
              <div class="form-actions">               
                <%= c.submit 'Create', class: "btn btn-primary"%>
              </div>
            </div>
          </fieldset>
        <%end%>  
      </div>
    </div>
  </div>
</div>

