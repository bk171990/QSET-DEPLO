<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Library Management',main_page_books_path %></li>
    <li><%= link_to 'Manage Books',main_page_books_path %></li>
    <li>Add Book</li>
  </ul>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to 'Advanced Search',advance_search_books_path, class: "btn btn-primary-link btn-xs" %>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-3"></div>
  <div class="box col-md-6">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Add Book</h2>
      </div>

  <div class="box-content">
    <%= form_for :book ,url:{action: 'create',controller: 'books'} do |c|%>
     <div class="errors"><ul class="errors"></ul></div>
     <fieldset>

      <div class="form-group">
        <div class="col-md-3"><b>Book Category:</b></div>
          <%=c.select :book_category_id, BookCategory.all.collect{|b| [b.book_type,b.id]},{prompt:true},{class: "form-control",style: "width:250px"}%>
      </div>
           
      <div class="form-group">
        <div class="col-md-3"><b>Book No:</b></div>
        <%=c.text_field :book_number, placeholder: "Book No", class: "form-control",style:"width:250px"%>
      </div>
            
      <div class="form-group">
        <div class="col-md-3"><b>Title:</b></div>
        <%=c.text_field :title, placeholder: "Title", class: "form-control",style:"width:250px"%>
      </div>

      <div class="form-group">
        <div class="col-md-3"><b>Author:</b></div>
        <%=c.text_field :author, placeholder: "Author", class: "form-control",style:"width:250px"%>
      </div>

      <div class="form-group">
        <div class="col-md-3"><b>Book Publication:</b></div>
          <%=c.select :publication_id, Publication.all.collect{|b| [b.name,b.id]},{prompt:true},{class: "form-control",style: "width:250px"}%>
      </div>


      <div class="form-group">
        <div class="col-md-3"><b>No Of Copies:</b></div>
          <%= text_field_tag "tag[count]", @count||1 %>
      </div>

      <div class="col-sm-4 col-sm-offset-4"> 
        <div class="form-actions">               
          <%= c.submit 'Create', class: "btn btn-primary"%>
        </div>
      </div>
    </fieldset>
    <%end%>  
  </div>
 </div>
</div>
</div>
