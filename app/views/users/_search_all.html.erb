

<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>User Details</h2>
      </div>
      <div class="box-content">
      <% if @users.empty? %>
<h4 align="center">No Record Found </h4>
<% else %>
        <table id="datatable" class="table table-striped table-bordered responsive">
          <thead>
           <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each_with_index do |user| %>
          <tr>
           <td> <%= link_to user.first_name+' '+user.last_name, user_path(user) %></td>
           <td> <%= user.username %></td>
           <td> <%= user.email %></td>
           <td> <%= user.role %></td>
         </tr>

         <% end %>
       </tbody>
     </table>
   </div>
 </div>
</div>
</div>

<% end %>

