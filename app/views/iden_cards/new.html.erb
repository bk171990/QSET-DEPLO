
<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li>Create ID-Cards</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Create ID-Cards</h2>
      </div>
      <div class="box-content">
      <%= form_for :iden_card ,url:{controller: 'iden_cards',action: 'create'} do |f| %>
    <fieldset>
     
    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-4">

        <div class="form-group">
          <b>Description:</b>
          <span style="color:red">*</span>
          <%= f.text_field :description, placeholder: "Description", class: "form-control",required:true%>
        </div>

         <div class="form-group">
          <b>Select Batch:</b>
          <span style="color:red">*</span>
          <%= f.select :batch_id, collect_card_batch, {prompt:true}, {onclick:"var a={id:$('#iden_card_batch_id').val()};$.get('selected_batch',a,function(response){});",:style =>"width: 300px",class: "form-control"} %>
          <br>

           <div class="form-group">
          <b>Select:</b> &nbsp;&nbsp; &nbsp;&nbsp;
          <%= link_to "All",'#',{onclick:"$('.check_box').prop('checked',true);",remote:true,class: "btn btn-primary-link btn-xs"}%>&nbsp;&nbsp;
          <%= link_to  "None",'#',{onclick:"$('.check_box').prop('checked',false);",remote:true,class: "btn btn-primary-link btn-xs"}%>
        </div>

        <div id="id_card_batch">
          <%= render 'batch_list'%>
        </div>
  
      </div>
    <div class="col-sm-2 col-sm-offset-2"> 
      <div class="form-actions">               
        <%= f.submit 'Print ID-Cards', class: "btn btn-primary"%>
      </div>
    </div>
  </fieldset>        
 <% end %>
</div>
</div>
</div>
</div>

