<div class="modal-body">
    <div class="errors">
        <ul class="errors"></ul></div>
    <%= form_for [@batch,@elective_group, @subject],remote: true do |f|%>
        
        <div class="form-group">
           <b>Name:</b>
           <span style="color:red">*</span>
            <%=f.text_field :name, class: "form-control",placeholder: "Name of Subject",required:true%>
        </div>
        <div class="form-group">
            <b>Code:</b>
            <span style="color:red">*</span>
            <%=f.text_field :code, class: "form-control" ,placeholder: "Code for subject",required:true%>
        </div>
        <div class="form-group">
            <b>Max Weekly Classes:</b>
            <span style="color:red">*</span>
            <%=f.text_field :max_weekly_classes, class: "form-control",placeholder: "Maximum classes for subject",required:true%>
        </div>
        <div class="form-group">
            <%=f.check_box :no_exams%> <b>No Exams</b>
        </div>

    <div class="modal-footer">
      <div align="center">
        <%= f.submit 'Submit', class: "btn btn-primary"%>
        <%= link_to 'Close', '#', class: "btn btn-default", :'data-dismiss'=>"modal"%>
    </div>
    </div>
<% end %>
</div>