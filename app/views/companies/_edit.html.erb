<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4><b>Edit Placement News</b></h4>
        </div>
        <div class="modal-body">
        <ul class="errors"></ul>
        <%= form_for @companies, remote:true do |f| %>
            <fieldset>
       
            <div class="form-group">
              <b>Name: <span style="color:red">*</span></b>
              <%=f.text_field :name, class: "form-control", style: "width: 350px", placeholder: "Company Name"%>
            </div>
              
            <div class="form-group">
              <b>Criteria</b>
              <%=f.text_area :criteria,style: 'width:350px;height:200px', placeholder: "Company Criteria ", class: "form-control"%>
            </div>
            <div align="center">             
                <%= f.submit 'Update News', class: "btn btn-primary"%>
                 <%= link_to 'Close', '#', class: "btn btn-default", :'data-dismiss'=>"modal"%>
                </div>
         
            </fieldset>
        <% end %>
        </div>
    </div>
</div>
