$("ul.errors").html("")
<% if @batch_group.errors.any? %>
  <%  @batch_group.errors.full_messages.each do |message| %>
  ("ul.errors").addClass("alert alert-danger alert-dismissable") 
  $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#Modal").modal("hide");
  window.location.replace("/courses/<%= @course.id%>/grouped_batches");
<% end %>