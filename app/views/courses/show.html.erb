<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Settings',setting_index_path %></li>
    <li><%= link_to 'Manage Course / Batch',course_batch_setting_index_path %></li>
    <li><%= link_to 'Course',courses_path %></li>
    <li>Batches</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to 'New Batch', new_course_batch_path(@course), class: "btn btn-primary-link btn-xs" %>
      <%= link_to 'Batch Group', grouped_batches_course_path(@course), class: "btn btn-primary-link btn-xs" %>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Batch Details</h2>
    </div>

    <div class="box-content">
      <table id="datatable" class="table table-striped table-bordered responsive">
        <thead>
          <tr>
            <th>Batch Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        <% @batches.each do |batch| %>
          <tr>
            <td>
              <%=link_to batch.course.code+" - "+batch.name , display_batch_path(batch) %>
            </td>
            <td class="center">
              <div class="label-success label label-default">
              <i class="glyphicon glyphicon-edit icon-white"></i> 
              <%= link_to 'Edit', edit_batch_path(batch),class: "a-action"%></div>

              <div class="label-danger label label-default">
              <i class="glyphicon glyphicon-trash icon-white"></i> 
              <%= link_to 'Delete' ,batch,method: :delete, data: { confirm: "Are you sure to delete Batch #{batch.course.course_name+" "+batch.course.section_name+" - "+batch.name }?" }, class: "a-action"%></div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
  </div>
</div>