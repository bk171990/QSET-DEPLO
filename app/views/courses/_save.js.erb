$("ul.errors").html("")
<% if @course.errors.any? %>
  <% @course.errors.full_messages.each do |message| %>
	$("ul.errors").addClass("alert alert-danger alert-dismissable")  
    $("ul.errors").append($("<p/>").addClass("icon-remove-sign").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
   $("#modal").modal("hide")
   $("#view_details").html("<%= j render 'view'%>")
   $("#flash").html("<%= j render 'layouts/messages'%>")
<% end %>
  