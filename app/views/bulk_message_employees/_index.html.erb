<h3>Total Email Sent :<%= @bulk_message_employees.count %></h3>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well"></div>
      <div class="box-content" style="overflow-y: auto;height: 550px;width:100%">
        <table id="datatable" class="table table-striped table-bordered responsive">
            <thead>
              <th>Sl no.</th>
              <th>Message</th>
              <th>Employee Name </th>
              <th>Contact Number</th>
              <th></th>
            </thead>
            <tbody>
              <% @bulk_message_employees.each_with_index do |message,i| %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= message.body %></td>
                  <td><%= message.employee.first_name+ " " +message.employee.last_name%></td>
                  <td><%= message.employee.mobile_phone %></td>
                </tr>
            </tbody>
          <%end%>
        </table>
      </div>
    </div>
  </div>
</div>
