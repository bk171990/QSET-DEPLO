<h3>Total Message Sent :<%= @message_to_all_departments.count %></h3>
<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Batch Details</h2>
    </div>

    <div class="box-content" style="overflow-y: scroll; height:auto">
      <table id="datatable" class="table table-striped table-bordered responsive">
        <thead>
          <tr>
            <th>Department </th>
            <th>Message</th>
          </tr>
        </thead>
        <tbody>
        <% @message_to_all_departments.each do |dept| %>
          <tr>
            <td>
             <%=dept.employee_department.name%>
            </td>
             <td>
              <%=dept.body %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  </div>
</div>