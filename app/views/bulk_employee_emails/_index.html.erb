<h3>Total Email Sent :<%= @bulk_employee_emails.count %></h3>

<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well"></div>
      <div class="box-content">
        <table id="datatable" class="table table-striped table-bordered responsive">
            <thead>
              <th>Sl no.</th>
              <th>Subject</th>
              <th>Email Message</th>
              <th>Employee Name </th>
              <th>Employee Email</th>
              <th></th>
            </thead>
            <tbody>
              <% @bulk_employee_emails.each_with_index do |message,i| %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= message.subject %></td>
                  <td><%= message.body %></td>
                  <td><%= message.employee.first_name+ " " +message.employee.last_name%></td>
                  <td><%= message.employee.email %></td>
                </tr>
            </tbody>
          <%end%>
        </table>
      </div>
    </div>
  </div>
</div>
