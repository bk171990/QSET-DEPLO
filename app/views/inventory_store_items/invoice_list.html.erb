  <table id="datatable" class="table table-striped table-bordered responsive">
  <tr class="tr-head">
   <thead>
    <tr>
      
						  <th>Sr.No</th>
						  <th>Batch and Course</th>
						  <th>Item Name</th>
						  <th>Description</th> 
                          <th>Quantity</th>
                          <th>Price</th>
                          <th>Total</th> 
					    </tr>
					</thead>
			<tbody>
				<% @storeitems.each_with_index do |i,e|%>
			      <tr>
			       <td><%=e+1%></td>
			        <td><%= i.batch.course.course_name.capitalize+" "+i.batch.course.section_name.capitalize+" "+i.batch.name.capitalize if i.batch%></td>
				    <td><%= i.item_name%></td>
				    <td><%= i.category %></td>
                    <td><%= i.quantity %></td>
                    <td><%= i.unit_price %></td>
                    <td><%= i.total%></td>
				  </tr>
				<%end%>  
			</tbody>
			</table>
					
					
