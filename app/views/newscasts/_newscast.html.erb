<hr> 
<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
      <h2>View all News</h2>
    </div>
    <div class="box-content" style="overflow-y: scroll; height:auto">
    <% if @newscasts.empty? %>
 <h4 align="center">No Record Found </h4>
   <% else %>
      <table id="datatable" class="table table-striped table-bordered responsive">
        <thead>
          <tr>
            <th>Sl.no</th>
            <th>Title</th>
            <th>Author</th>
            <th>Comments</th>
            <th>Posted</th>
         </tr>
        </thead> 
        <tbody>
        <% @newscasts.each_with_index do |n,i| %>
          <tr>
            <td><%= i+1 %></td>
            <td><%=  link_to n.title, newscast_path(n) %></td>
            <td>
            <%= n.user.full_name %>
          </td>
          <td>
            <%= n.comments.size %>
          </td>
          <td>
            <%= time_ago_in_words(n.created_at) %> ago
          </td>
           
          </tr>
        <% end %>
        </tbody>
      </table>
      <%end%>
    </div>

  </div>
  </div>

</div>